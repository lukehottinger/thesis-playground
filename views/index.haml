%link{rel: 'stylesheet', href: '/css/app.css'}
%link{rel: 'stylesheet', href: '/css/foundation.css'}

%div.row
  %div.small-12.medium-6.medium-centered.small-centered.columns
    %img{ src: @shot_image }
    %h2= @lives
    %form{ action: '/guess', method: 'POST' }
    %input{ name: 'tags', type: 'hidden', value: @shot_tags }
    %input{ name: 'image', type: 'hidden', value: @shot_image }
    %input{ name: 'guess', type: 'text', placeholder: 'Guess a tag...' }
    %input{ name: 'submit', type: 'submit' }
